program tp9e5;      {este y varios de los que siguen los hicimos en clase pero no los copie tal cual y algunas cosas estan diferentes asi que por las dudas}

type
    taArray = array[1..100] of integer;

var                              
    a:taArray;
    pos, pos2, max, max2, i: integer;
    
begin
    randomize();
    max:=-200;
    max2:=-200;
    pos:=0;
    pos2:=0;
    
    for i:=1 to 100 do
    begin
        a[i]:=random(100);
    end;

    for i:=1 to 100 do
    begin
        if (a[i] >= max) then
        begin
            max:=a[i];
            pos:=i;
        end
        else
        begin
            if (a[i] >= max2) then
            begin
                max2:=a[i];
                pos2:=i;
            end;
        end;
    end;

    writeln('el mayor es ',max,' y esta en la posicion ',pos);
    writeln('el segundo mayor es ',max2,' y esta en la posicion ',pos2);

end.



