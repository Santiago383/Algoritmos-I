program tp10e7;

type

    taNotas = array[1..3] of integer;

    trAlumnos = record
        nombre:string;
        notas:taNotas;
    end;
    
    taAlumnos = array[1..5] of trAlumnos;
    
var
     alumnos:taAlumnos;
     i, j:integer;
     
begin

    for i:=1 to 3 do        {pongo menos elementos para que sea facil de testear}
    begin
        writeln('ingrese nombre:');
        readln(alumnos[i].nombre);
        for j:=1 to 3 do
        begin
            writeln('ingrese nota de la materia ',j);
            readln(alumnos[i].notas[j]);
        end;
    end;
    
    writeln;
    
    for i:=1 to 3 do
    begin
        writeln('el promedio de ',alumnos[i].nombre,' es ',(alumnos[i].notas[1] + alumnos[i].notas[2] + alumnos[i].notas[3])/3:0:2);
    end;

end.


-------------------------------------

program tp10e10;

type
    trProductos = record
        nombre:string;
        precio:real;
    end;
    
    taProductos = array[1..100] of trProductos;
    
var
    
     productos:taProductos;
     max, min:real;
     caro, barato:string;
     i: integer;
     
begin

    max:=0;
    min:=9999;
    
    for i:=1 to 3 do
    begin
        writeln('ingrese nombre del producto:');
        readln(productos[i].nombre);
        writeln('ingrese precio del producto:');
        readln(productos[i].precio);
    end;
    
    for i:=1 to 3 do
    begin
        if (productos[i].precio > max) then
        begin
            max:=productos[i].precio;
            caro:=productos[i].nombre;
        end;
    end;
    
    for i:=1 to 3 do
    begin
        if (productos[i].precio < min) then
        begin
            min:=productos[i].precio;
            barato:=productos[i].nombre;
        end;
    end;
    
    writeln;
    writeln('el producto mas caro es ',caro,', y el mas barato es ',barato);

end.
